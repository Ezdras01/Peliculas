import 'package:flutter/material.dart';

void main() {
    runApp(MyApp());
}

class MyApp extends StatelessWidget {
    @override
    Widget build(BuildContext context) {
        return MaterialApp(
            title: 'Mi Aplicación de Muestra',
            theme: ThemeData(
                primarySwatch: Colors.blue,
            ),
            home: MyHomePage(),
        );
    }
}

class MyHomePage extends StatelessWidget {
    @override
    Widget build(BuildContext context) {
        return Scaffold(
            appBar: AppBar(
                title: Text('Mi Aplicación de Muestra'),
            ),
            body: Center(
                child: Text(
                    '¡Hola, mundo!',
                    style: TextStyle(fontSize: 24),
                ),
            ),
        );
    }
}